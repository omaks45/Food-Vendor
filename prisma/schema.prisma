generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}



// User Schema
model User {
  id                String      @id @default(auto()) @map("_id") @db.ObjectId
  email             String      @unique
  phoneNumber       String?     
  password          String?
  firstName         String
  lastName          String
  role              UserRole    @default(CUSTOMER)
  isEmailVerified   Boolean     @default(false)
  isPhoneVerified   Boolean     @default(false)
  authProvider      AuthProvider @default(TRADITIONAL)
  googleId          String?     
  facebookId        String?     
  profileImage      String?
  
  referralCode      String      @unique
  referredBy        String?     @db.ObjectId
  referrer          User?       @relation("Referrals", fields: [referredBy], references: [id], onDelete: NoAction, onUpdate: NoAction)
  referrals         User[]      @relation("Referrals")
  
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
  lastLogin         DateTime?
  
  addresses         Address[]
  orders            Order[]
  cart              Cart?
  otpCodes          OTPCode[]
  
  @@map("users")
}

enum UserRole {
  CUSTOMER
  ADMIN
}

enum AuthProvider {
  TRADITIONAL
  GOOGLE
  FACEBOOK
}

model OTPCode {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  userId       String      @db.ObjectId
  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  code         String
  purpose      OTPPurpose
  expiresAt    DateTime
  isUsed       Boolean     @default(false)
  createdAt    DateTime    @default(now())
  
  @@index([userId, purpose, expiresAt])
  @@map("otp_codes")
}

enum OTPPurpose {
  EMAIL_VERIFICATION
  PASSWORD_RESET
  PHONE_VERIFICATION
}

model Address {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  userId          String    @db.ObjectId
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  number          String
  street          String
  city            String
  state           String
  
  isDefault       Boolean   @default(false)
  label           String?
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  orders          Order[]
  
  @@index([userId])
  @@map("addresses")
}

model FoodCategory {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  name        String      @unique
  slug        String      @unique
  description String?
  imageUrl    String?
  imagePublicId   String?
  isActive    Boolean     @default(true)
  displayOrder Int        @default(0)
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  foodItems   FoodItem[]
  
  @@index([isActive])
  @@map("food_categories")
}

model FoodItem {
  id              String          @id @default(auto()) @map("_id") @db.ObjectId
  categoryId      String          @db.ObjectId
  category        FoodCategory    @relation(fields: [categoryId], references: [id])
  
  name            String
  slug            String
  description     String
  imageUrl        String
  imagePublicId   String?
  
  basePrice       Float
  
  allowProteinChoice    Boolean   @default(false)
  allowExtraSides       Boolean   @default(false)
  isAvailable     Boolean         @default(true)
  isFeatured      Boolean         @default(false)
  allowCustomerMessage  Boolean   @default(true)
  
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  
  cartItems       CartItem[]
  orderItems      OrderItem[]
  
  @@unique([slug])
  @@index([categoryId])
  @@index([isAvailable])
  @@index([categoryId, isAvailable])
  @@map("food_items")
}

enum ProteinType {
  FRIED_CHICKEN
  GRILLED_FISH
  BEEF
}

enum ExtraSideType {
  FRIED_PLANTAIN
  COLESLAW
  EXTRA_PEPPER_SAUCE
}

model Cart {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  userId      String      @unique @db.ObjectId
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  items       CartItem[]
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  @@map("carts")
}

model CartItem {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  cartId      String          @db.ObjectId
  cart        Cart            @relation(fields: [cartId], references: [id], onDelete: Cascade)
  
  foodItemId  String          @db.ObjectId
  foodItem    FoodItem        @relation(fields: [foodItemId], references: [id])
  
  quantity    Int             @default(1)
  selectedProtein     ProteinType?
  selectedExtraSides  ExtraSideType[]
  customerMessage     String?
  unitPrice   Float
  
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  
  @@index([cartId])
  @@index([foodItemId])
  @@map("cart_items")
}

model Order {
  id                String        @id @default(auto()) @map("_id") @db.ObjectId
  orderNumber       String
  
  userId            String        @db.ObjectId
  user              User          @relation(fields: [userId], references: [id])
  
  items             OrderItem[]
  
  subtotal          Float
  deliveryFee       Float
  serviceFee        Float
  tax               Float
  discount          Float         @default(0)
  total             Float
  
  addressId         String        @db.ObjectId
  address           Address       @relation(fields: [addressId], references: [id])
  deliveryTime      DateTime?
  deliveryInstructions String?
  contactNumber     String
  
  status            OrderStatus   @default(PENDING)
  
  paymentMethod     PaymentMethod
  paymentStatus     PaymentStatus @default(PENDING)
  
  promoCode         String?
  referralCodeUsed  String?
  customerInstructions String?
  
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  confirmedAt       DateTime?
  completedAt       DateTime?
  cancelledAt       DateTime?
  
  cancellationReason String?
  cancelledBy       String?
  
  @@unique([orderNumber])
  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@index([userId, status])
  @@index([status, createdAt])
  @@map("orders")
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  OUT_FOR_DELIVERY
  COMPLETED
  CANCELLED
}

enum PaymentMethod {
  CASH_ON_DELIVERY
  CARD
  BANK_TRANSFER
  WALLET
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

model OrderItem {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  orderId     String          @db.ObjectId
  order       Order           @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  foodItemId  String          @db.ObjectId
  foodItem    FoodItem        @relation(fields: [foodItemId], references: [id])
  
  quantity    Int
  foodName    String
  foodImage   String
  
  selectedProtein     ProteinType?
  selectedExtraSides  ExtraSideType[]
  customerMessage     String?
  
  unitPrice   Float
  totalPrice  Float
  
  createdAt   DateTime        @default(now())
  
  @@index([orderId])
  @@index([foodItemId])
  @@map("order_items")
}

model ReferralCode {
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  code            String      @unique
  userId          String?     @db.ObjectId
  
  discountType    DiscountType
  discountValue   Float
  
  maxUses         Int?
  currentUses     Int         @default(0)
  
  isActive        Boolean     @default(true)
  expiresAt       DateTime?
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  @@index([isActive])
  @@map("referral_codes")
}

enum DiscountType {
  PERCENTAGE
  FIXED_AMOUNT
}

model AdminActivityLog {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  adminId     String      @db.ObjectId
  action      String
  entityType  String
  entityId    String?     @db.ObjectId
  details     Json?
  ipAddress   String?
  
  createdAt   DateTime    @default(now())
  
  @@index([adminId])
  @@index([createdAt])
  @@index([entityType])
  @@map("admin_activity_logs")
}